{
    "apiVersion": "apps/v1",
    "kind": "Deployment",
    "metadata": {
        "name": "api-gateway",
        "namespace": "dev"
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "matchLabels": {
                "app": "api-gateway",
                "env": "dev"
            }
        },
        "template": {
            "metadata": {
                "labels": {
                    "app": "api-gateway",
                    "env": "dev"
                }
            },
            "spec": {
                "containers": [
                    {
                        "env": [
                            {
                                "name": "CUSTOM_MESSAGE",
                                "valueFrom": {
                                    "configMapKeyRef": {
                                        "key": "custom.message",
                                        "name": "api-gateway-config-map"
                                    }
                                }
                            }
                        ],
                        "envFrom": [
                            {
                                "configMapRef": {
                                    "name": "api-gateway-config-map-global"
                                }
                            }
                        ],
                        "image": "api-gateway:1",
                        "imagePullPolicy": "IfNotPresent",
                        "name": "api-gateway"
                    }
                ],
                "restartPolicy": "Always",
                "schedulerName": "default-scheduler",
                "serviceAccount": "service-account-for-dev-namespace",
                "serviceAccountName": "service-account-for-dev-namespace",
                "terminationGracePeriodSeconds": 30
            }
        }
    }
}
